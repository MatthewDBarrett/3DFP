---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

// Automated asset loading from your specific location
const images = import.meta.glob('/src/assets/SampleRenders/*.{jpeg,jpg,png,gif,webp}');
---

<Layout title="3D Floor Plans | High-Fidelity Architectural Modeling">
	
	<nav class="fixed w-full z-50 top-0 bg-white/80 backdrop-blur-md border-b border-slate-200">
		<div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
			<span class="text-xl font-bold tracking-tighter text-slate-800">3DFLOORPLANS<span class="text-blue-600">.SITE</span></span>
			<div class="hidden md:flex space-x-8 text-sm font-medium text-slate-600">
				<a href="#portfolio" class="hover:text-blue-600 transition">Portfolio</a>
				<a href="#services" class="hover:text-blue-600 transition">Services</a>
				<a href="#contact" class="bg-slate-900 text-white px-5 py-2 rounded-full hover:bg-slate-800 transition">Get a Quote</a>
			</div>
		</div>
	</nav>

	<main class="pt-32">
		<section class="max-w-7xl mx-auto px-6 text-center mb-24">
			<div class="inline-block px-4 py-1.5 mb-6 text-sm font-semibold tracking-wide text-blue-600 uppercase bg-blue-50 rounded-full">
				Available for Australian Projects
			</div>
			<h1 class="text-6xl md:text-7xl font-black text-slate-900 tracking-tight mb-8">
				Precision modeling.<br/><span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-500">Immersive visuals.</span>
			</h1>
			<p class="text-lg text-slate-600 max-w-2xl mx-auto mb-10 leading-relaxed">
				Transforming 2D blueprints into photorealistic 3D experiences. We provide architects and real estate agents with the visual edge needed to close deals faster.
			</p>
			<div class="flex flex-col md:flex-row justify-center gap-4">
				<a href="#portfolio" class="px-8 py-4 bg-slate-900 text-white rounded-xl font-bold text-lg shadow-xl shadow-slate-200 hover:-translate-y-1 transition-all">View Our Work</a>
				<a href="#contact" class="px-8 py-4 bg-white text-slate-900 border border-slate-200 rounded-xl font-bold text-lg hover:bg-slate-50 transition-all">Contact Sales</a>
			</div>
		</section>

		<section class="bg-white border-y border-slate-200 py-12 mb-24">
			<div class="max-w-7xl mx-auto px-6 grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
				<div>
					<p class="text-3xl font-bold text-slate-900">24h</p>
					<p class="text-sm text-slate-500 uppercase tracking-widest mt-1">Typical Turnaround</p>
				</div>
				<div>
					<p class="text-3xl font-bold text-slate-900">100%</p>
					<p class="text-sm text-slate-500 uppercase tracking-widest mt-1">Scale Accuracy</p>
				</div>
				<div>
					<p class="text-3xl font-bold text-slate-900">4K</p>
					<p class="text-sm text-slate-500 uppercase tracking-widest mt-1">Render Quality</p>
				</div>
				<div>
					<p class="text-3xl font-bold text-slate-900">AU</p>
					<p class="text-sm text-slate-500 uppercase tracking-widest mt-1">Local Support</p>
				</div>
			</div>
		</section>

		<section id="portfolio" class="max-w-7xl mx-auto px-6 mb-32">
			<div class="flex justify-between items-end mb-12">
				<div>
					<h2 class="text-4xl font-bold text-slate-900 tracking-tight">Featured Renders</h2>
					<p class="text-slate-500 mt-2 text-lg">A showcase of our recent architectural visualizations.</p>
				</div>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-10">
				{Object.entries(images).map(([path, importImage]) => (
					<div class="group cursor-pointer">
						<div class="relative aspect-[16/10] overflow-hidden rounded-3xl bg-slate-200 shadow-2xl">
							<Image 
								src={importImage()} 
								alt="3D Floor Plan Render" 
								class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-700 ease-out"
							/>
							<div class="absolute inset-0 bg-gradient-to-t from-slate-900/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-8">
								<p class="text-white font-medium text-lg">View Full Resolution</p>
							</div>
						</div>
					</div>
				))}
			</div>
		</section>
	</main>

	<section id="contact" class="max-w-4xl mx-auto px-6 mb-32">
		<div class="bg-blue-600 rounded-[2rem] p-12 text-center text-white relative overflow-hidden">
			<div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
			
			<h2 class="text-4xl font-bold mb-4">Request a 3D Floor Plan</h2>
			<p class="text-blue-100 mb-10 text-lg">Upload your 2D blueprints, and I'll send you a quote within 24 hours.</p>
	
			<form action="https://formspree.io/f/your-id-here" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
				<div class="space-y-2">
					<label class="text-sm font-medium ml-1">Full Name</label>
					<input type="text" name="name" required class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder:text-blue-200 focus:bg-white/20 focus:outline-none transition" placeholder="John Citizen">
				</div>
				<div class="space-y-2">
					<label class="text-sm font-medium ml-1">Email Address</label>
					<input type="email" name="email" required class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder:text-blue-200 focus:bg-white/20 focus:outline-none transition" placeholder="john@example.com">
				</div>
				<div class="md:col-span-2 space-y-2">
					<label class="text-sm font-medium ml-1">Project Details</label>
					<textarea name="message" rows="4" class="w-full px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder:text-blue-200 focus:bg-white/20 focus:outline-none transition" placeholder="e.g. 3-bedroom apartment, require virtual staging..."></textarea>
				</div>
				<button type="submit" class="md:col-span-2 mt-4 bg-white text-blue-600 py-4 rounded-xl font-bold text-lg hover:bg-blue-50 transition-all active:scale-95 shadow-lg shadow-blue-900/20">
					Send Request
				</button>
			</form>
		</div>
	</section>

	<footer class="bg-slate-900 text-slate-400 py-20 px-6">
		<div class="max-w-7xl mx-auto text-center">
			<p class="text-white font-bold mb-4">Ready to start your next project?</p>
			<a href="mailto:hello@3dfloorplans.site" class="text-3xl md:text-5xl font-bold text-white hover:text-blue-400 transition">hello@3dfloorplans.site</a>
			<div class="mt-16 pt-8 border-t border-slate-800 flex justify-between items-center text-sm">
				<p>Â© 2026 3D Floor Plans AU. All rights reserved.</p>
				<p>ABN: [Your ABN Pending]</p>
			</div>
		</div>
	</footer>
</Layout>